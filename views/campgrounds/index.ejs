<% layout('layouts/boilerplate')%>
    <div id="cluster-map"></div>
    <h1>All Campgrounds</h1>
    <a href="/campgrounds/new">New Campground</a>
        <% for (let campground of campgrounds){%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%= campground.images[0].url  %>" alt=""> 
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= campground.title  %> </h5>
                            <p class="card-text"><%= campground.description  %> </p>
                            <p class="card-text"><small class="textmuted"><%= campground.location  %></small> </p>
                            <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">View Campground</a>
                        </div>
                        
                    </div>
                </div>
            </div>
        <% }%>
    <script>
        const mapToken='<%-process.env.MAP_TOKEN%>';
        const campgrounds= {features:<%-JSON.stringify(campgrounds)%>} ;
    </script>
    <script src="/scripts/clusterMap.js"></script>